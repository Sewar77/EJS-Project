<%- include("partials/header.ejs") %>

<div class="container p-4 mt-4">
  <div class="card shadow bg-danger-subtle">
    <div class="card-body">
      <h2 class="card-title text-center mb-4">Edit Post</h2>
      <form action="/posts/editPost/<%= post.id %>?_method=PUT" method="POST">
        <div class="mb-3">
          <label class="form-label">Title</label>
          <input
            type="text"
            name="title"
            class="form-control"
            value="<%= post.title %>"
            required
          />
        </div>
        <div class="mb-3">
          <label class="form-label">Author Name:</label>
          <input
            type="text"
            name="nameAuthar"
            class="form-control"
            value="<%= post.nameAuthar %>"
            required
          />
        </div>
        <div class="mb-3">
          <label class="form-label">Content</label>
          <textarea
            name="content"
            class="form-control"
            rows="8"
            required
          ><%= post.content %></textarea>
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-danger px-4">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include("partials/footer.ejs") %>
