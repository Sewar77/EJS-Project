<%- include("partials/header.ejs") %>

<div class="container mt-5">
  <h2>Update Post</h2>
  <form action="/updatePost/<%= index %>" method="POST">
    <div class="form-group">
      <label>Title:</label>
      <input
        type="text"
        name="title"
        value="<%= post.title %>"
        class="form-control"
        required
      />
    </div>
    <div class="form-group">
      <label>Author:</label>
      <input
        type="text"
        name="nameAuthr"
        value="<%= post.nameAuthr %>"
        class="form-control"
        required
      />
    </div>
    <div class="form-group">
      <label>Content:</label>
      <textarea name="content" class="form-control" required>
<%= post.content %></textarea
      >
    </div>
    <button type="submit" class="btn btn-primary">Update Post</button>
    <a href="/viewPost" class="btn btn-secondary ml-2">Cancel</a>
  </form>
</div>

<%- include("partials/footer.ejs") %>
