<%- include("partials/header.ejs") %>

<div class="container mt-4">
  <% if (locals.posts && locals.posts.length > 0) { %> <% posts.forEach((post)=>
  { %>
  <div class="card mb-4 shadow">
    <div class="card-body">
      <h3 class="card-title"><%= post.title %></h3>
      <h6 class="card-title">By: <%= post.nameAuthar%></h6>
      <p class="card-text"><%= post.content %></p>
      <div class="mt-3">
        <a href="/posts/editPost/<%= post.id %>" class="btn btn-success"
          >Update</a
        >

        <form
          action="/posts/deletePost/<%= post.id %>?_method=DELETE"
          method="POST"
          style="display: inline"
        >
          <button type="submit" class="btn btn-danger btn-sm">Delete</button>
        </form>
      </div>
    </div>
  </div>
  <% }); %> <% } else { %>
  <p class="text-center">
    No posts available yet. Be the first to share your travel story!
  </p>
  <% } %>
</div>

<%- include("partials/footer.ejs") %>
