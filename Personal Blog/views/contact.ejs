<%- include("header.ejs") %>

<h1 class="text-center p-3 m-3">leave a comment:</h1>

<div class="container bg-danger-subtle">
  <form class="row p-3 m-3 border rounded g-3" action="/contact" method="post">
    <div class="col-md-6">
      <label for="inputEmail4" class="form-label">Email</label>
      <input type="email" class="form-control" id="inputEmail4" />
    </div>
    <div class="col-md-6">
      <label for="name" class="form-label">Name</label>
      <input type="text" class="form-control" id="name" name="name" />
    </div>
    <div class="col-12">
      <label for="message" class="form-label">Message</label>
      <textarea
        class="form-control"
        id="message"
        name="message"
        placeholder="Leave a comment"
      >
      </textarea>
    </div>
    <div class="col-12">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="gridCheck" />
        <label class="form-check-label" for="gridCheck"> Show on Page? </label>
      </div>
    </div>
    <div class="col-12">
      <button type="submit" class="btn btn-danger">Comment</button>
    </div>
  </form>
</div>
<br />

